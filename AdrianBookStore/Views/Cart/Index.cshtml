@model AdrianBookStore.Models.Cart
@{
    ViewBag.Title = "Index";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Item Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var product in Model.Books)
        {
            <tr>
                <td>@product.Title</td>
                <td>@product.Quantity</td>
                <td>@product.Price.ToString("C")</td>
                <td>@((product.Quantity*product.Price).ToString("C"))</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3">Subtotal</th>
            <th>@Model.SubTotal.ToString("C")</th>
        </tr>
        <tr>
            <th colspan="3">Shipping & Handling</th>
            <th>@Model.ShippingAndHandling.ToString("C")</th>
        </tr>
        <tr>
            <th colspan="3">Tax</th>
            <th>@Model.Tax.ToString("C")</th>
        </tr>
        <tr>
            <th colspan="3">Total</th>
            <th>@Model.Total.ToString("C")</th>
        </tr>
    </tfoot>
</table>