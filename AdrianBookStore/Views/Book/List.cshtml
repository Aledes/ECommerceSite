@model IEnumerable<AdrianBookStore.Models.Book>
@{ 
    ViewBag.Title = "List";
}

<h2>Books</h2>
<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <div class="well text-center">
                <h2>@book.Title</h2>
                <br />
                <a href="/book/index/@book.BookID"><img class="img-circle img-responsive" src="@book.CoverImage" /></a>
                <br />
                <p>@String.Join(",", book.Authors.Select(x => x.firstName + " " + x.lastName))</p>
            </div>
        </div>
    }
</div>

