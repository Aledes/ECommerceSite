@model IEnumerable<AdrianBookStore.Models.Book>

@{
    ViewBag.Title = "Search";
}

<h2>Search Results</h2>

<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <div class="booklist panel panel-default text-center">
                <div class="panel-heading">
                    <h3>@book.Title</h3>
                    <p>@String.Join(",", book.Authors.Select(x => x.firstName + " " + x.lastName))</p>
                </div>
                <div class="panel-body">
                    <a href="/book/index/@book.BookID"><img class="img-rounded bookimage" src="@book.CoverImage" /></a>
                </div>

            </div>
        </div>
    }
</div>

